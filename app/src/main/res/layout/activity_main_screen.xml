<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.sofwerx.usf.talosconfigurator.MainScreenActivity">

    <Button
        android:layout_width="111dp"
        android:layout_height="37dp" android:id="@+id/btnDelTab"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/appbar" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" android:text="Delete Mode" android:textAlignment="center"
        style="@android:style/Widget.Button"/>
    <Button
        android:text="Rename Mode"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:id="@+id/btnRename" app:layout_constraintRight_toLeftOf="@+id/btnDelTab"
        android:layout_marginRight="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" style="@android:style/Widget.Button"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay" android:layout_gravity="top"
        tools:layout_editor_absoluteY="0dp" android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" android:background="@android:color/holo_blue_dark">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="0dp"
            android:id="@+id/constraintLayout" android:layout_marginTop="0dp"
            app:layout_constraintHorizontal_bias="0.0">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnNewTab"
                android:background="@android:drawable/ic_menu_add" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" android:backgroundTint="@android:color/black"
                app:layout_constraintVertical_bias="0.0"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="895dp"
                android:layout_height="52dp"
                app:layout_constraintRight_toLeftOf="@+id/btnNewTab" android:layout_marginRight="8dp"
                app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="1.0"
                android:layoutDirection="ltr" app:tabGravity="fill"
                app:tabMode="scrollable"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="966dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp" android:layout_height="463dp"
        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
    />


</android.support.constraint.ConstraintLayout>
