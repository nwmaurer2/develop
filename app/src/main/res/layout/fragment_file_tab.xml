<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.sofwerx.usf.talosconfigurator.FileTabFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="File Name"
        android:ems="10"
        android:id="@+id/filename" android:textAlignment="textStart"
        android:layout_marginEnd="30dp"
        app:layout_constraintLeft_toRightOf="@+id/listView"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@+id/listView"
        app:layout_constraintHorizontal_bias="1.0"/>
    <ListView
        android:layout_width="309dp"
        android:layout_height="374dp"
        android:id="@+id/listView"
        tools:layout_constraintTop_creator="1" tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="30dp" app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="31dp" app:layout_constraintVertical_bias="0.277"
    />
    <Button
        android:text="LOAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/btn_load"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/listView" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.458" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/listView" android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/listView"/>
    <Button
        android:text="NEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_new"
        app:layout_constraintRight_toLeftOf="@+id/btn_save"
        android:layout_marginRight="10dp" android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/filename"/>
    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/btn_save"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/filename" android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@+id/filename"/>

</android.support.constraint.ConstraintLayout>
