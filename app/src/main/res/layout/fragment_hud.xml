<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:visibility="visible"
tools:context="com.sofwerx.usf.talosconfigurator.HudFragment">

<TextView
    android:id="@+id/section_label"
    android:layout_width="8dp"
    android:layout_height="507dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.658"
    tools:layout_editor_absoluteX="0dp" />

<Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="201dp"
        android:layout_height="322dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintLeft_toRightOf="@+id/section_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956">

    </LinearLayout>

    <TextView
        android:id="@+id/mode_text"
        android:layout_width="160dp"
        android:layout_height="156dp"
        android:text="This is some dank text!"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="220dp"
        app:layout_constraintRight_toRightOf="parent" />

    <GridView
        android:layout_width="148dp"
        android:layout_height="127dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toRightOf="@+id/gridView2"
        tools:layout_editor_absoluteY="42dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <GridView
        android:id="@+id/gridView2"
        android:layout_width="149dp"
        android:layout_height="125dp"
        android:layout_marginLeft="21dp"
        app:layout_constraintLeft_toRightOf="@+id/gridView"
        tools:layout_editor_absoluteY="42dp" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="141dp"
        android:layout_height="123dp"
        android:layout_marginLeft="66dp"
        app:layout_constraintLeft_toRightOf="@+id/section_label"
        tools:layout_editor_absoluteY="42dp" />


</android.support.constraint.ConstraintLayout>

