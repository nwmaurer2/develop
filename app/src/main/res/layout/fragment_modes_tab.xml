<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.sofwerx.usf.talosconfigurator.ModesTabFragment">

    <Button
        android:id="@+id/button_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buttons Config"
        tools:ignore="RtlHardcoded"
        android:layout_marginRight="327dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/mode_container"
        app:layout_constraintTop_toTopOf="@+id/mode_container" />

    <FrameLayout
        android:id="@+id/mode_container"
        android:layout_width="598dp"
        android:layout_height="520dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ListView
            android:id="@+id/listofelements"
            android:layout_width="124dp"
            android:layout_height="446dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>

